{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}


{{!-- Featured Post --}}
{{#is "home"}}
{{#get "pages" filter="featured:true" limit="1" as |featured_post|}}
    {{#foreach featured_post}}
        <article id="banner">
            <div class="content">
                <header>
                    <h1><a href="{{url}}">{{title}}</a></h1>
                    {{#if custom_excerpt}}<p>{{custom_excerpt}}</p>{{/if}}
                </header>
                {{content words="35 "}}
                <ul class="actions">
                    <li><a href="{{url}}" class="button big">Saiba mais</a></li>
                </ul>
            </div>
        </article>
    {{/foreach}}
{{/get}}
{{/is}}

{{!-- Posts --}}
<section>

    <header class="major">
        <h2>Posts Recentes</h2>
    </header>

    <section class="posts">
        {{#foreach posts}}
        <article>
            {{#if feature_image}}
            <a href="{{url}}" class="image fit"><img src="{{img_url feature_image}}" alt="{{title}}" /></a>
            {{/if}}
            <h3><a href="{{url}}">{{title}}</a></h3>
            <p>{{excerpt words="35"}}</p>
            <ul class="actions special">
                <li><a href="{{url}}" class="button">Full Story</a></li>
            </ul>
        </article>
        {{/foreach}}
    </section>

</section>

{{!-- Pagination --}}
{{pagination}}

