{{!-- Posts --}}
<section>

    <header class="major">
        <h2>Posts Recentes</h2>
    </header>

    <section class="posts">
        {{#foreach posts}}
        <article>
            {{#if feature_image}}
            <a href="{{url}}" class="image fit"><img src="{{img_url feature_image}}" alt="{{title}}" /></a>
            {{/if}}
            <h3><a href="{{url}}">{{title}}</a></h3>
            <p>{{excerpt words="35"}}</p>
            <ul class="actions special">
                <li><a href="{{url}}" class="button">Ir para o Post</a></li>
            </ul>
        </article>
        {{/foreach}}
    </section>

</section>

